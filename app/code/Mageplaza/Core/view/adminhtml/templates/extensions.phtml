$installedModules = $block->getInstalledModules();
$availableModules = $block->getAvailableModules();
?>
<?php if ($availableModules && count($availableModules)): ?>
    <div class="table-wrapper">
        <table class="admin__table-secondary" id="extension-information">
            <caption class="table-caption"><?= $block->escapeHtml(__('Installed Mageplaza Modules')) ?></caption>
            <thead>
            <tr>
                <th scope="col" class="col name"><?= $block->escapeHtml(__('Extension name')) ?></th>
                <th scope="col" class="col version"><?= $block->escapeHtml(__('Current Version')) ?></th>
                <th scope="col" class="col store"><?= $block->escapeHtml(__('Store Version')) ?></th>
                <th scope="col" class="col link"><?= $block->escapeHtml(__('Extension Link')) ?></th>
                <th scope="col" class="col download"><?= $block->escapeHtml(__('Download Link')) ?></th>
            </tr>
            </thead>
            <tbody>
            <?php foreach ($installedModules as $name => $version): ?>
                <?php if (!empty($availableModules[$name])): ?>
                    <?php $storeInfo = $availableModules[$name]; ?>
                    <tr>
                        <td data-th="<?php echo $block->escapeHtmlAttr(__('Extension name')) ?>"
                            class="col name"><?= $block->escapeHtml($name); ?></td>
                        <td data-th="<?php echo $block->escapeHtmlAttr(__('Current Version')) ?>"
                            class="col version"><?= $block->escapeHtml($version); ?></td>
                        <td data-th="<?php echo $block->escapeHtmlAttr(__('Latest version')) ?>"
                            class="col store"><?= $block->escapeHtml($storeInfo['version']); ?></td>
                        <td data-th="<?php echo $block->escapeHtmlAttr(__('Extension Link')) ?>" class="col link"><a
                                    target="_blank" href="<?= $block->escapeHtml($storeInfo['url']); ?>">Visit page</a></td>
                        <td data-th="<?php echo $block->escapeHtmlAttr(__('Download Link')) ?>" class="col download"><a
                                    target="_blank" href="<?= $block->escapeUrl($storeInfo['download']); ?>">Download latest version</a></td>
                    </tr>
                <?php endif; ?>
            <?php endforeach; ?>
            </tbody>
        </table>
    </div>
<?php else: ?>
    <p>There maybe something wrong when connecting to server</p>
<?php endif; ?>
